.city-weather
.city-add
  padding 20px
  margin 20px
  min-width 200px
  text-align center
  background white
  border-radius 3px
  transform scale(1.1)
  box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)
  &__controls
    text-align right
    .fa
      margin 0 5px
  &__name
    font-size 2rem
  &__description
    margin 5px 0
  &__temperature
    font-size 1.8rem
    margin 10px 0
